<form method="post" action="{{ path('notification_delete', {'id': notification.id}) }}" onsubmit="return confirm('Êtes-vous sûre de vouloir supprimer cette notification ? ');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ notification.id) }}">
    <button class="btn btn-danger btn-icon-split" title="supprimer">
        <span class="icon text-white-50">
            <i class="fas fa-trash"></i>
        </span>
    </button>
</form>
