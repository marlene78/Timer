{% extends 'base.html.twig' %}

{% block title %}Statistique{% endblock %}

{% block body %}
<div class="container-fluid">

    <!-- Page Heading -->
    <h1 class="h2 mb-2 text-gray-800 text-center">Statistique</h1>
    <h2 class="h3 mb-2 text-gray-800 text-center">{{ project.nom }}</h2>



    <!-- table Chart -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary" id="nbTasks"></h6>
        </div>
        <div class="card-body">
            <div class="card-deck">
                <div class="card">
                    <div class="card-header bg-transparent py-3">À faire</div>
                    <div id='loader' class="loader_user"></div>
                    <div class="card-body" id="myAreaTab"></div>   
                    
                </div>
                <div class="card">
                    <div class="card-header bg-transparent py-3">En traitement</div>
                    <div id='loader' class="loader_user"></div>
                    <div class="card-body" id="myAreaTabEnCours">
                    </div>
                </div>
                <div class="card">
                    <div class="card-header bg-transparent py-3">Terminée</div>
                    <div id='loader' class="loader_user"></div>
                    <div class="card-body" id="myAreaTabEnCloture"> 
                    </div>
                </div>
              </div>
            <hr>
                 
        </div>


    </div>
     
    <!-- Donut Chart -->
    <div class="card shadow mb-4">
        <!-- Card Header - Dropdown -->
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Pourcentage réalisation des tâches</h6>
        </div>
       
        <div class="card-body">
            <div class="chart-pie">
                <div id='loader' class="loader_pourcentage"></div>
                <canvas id="myPieChart" class="cacher"></canvas>   
            </div>
            <hr>
        </div>
    </div>


    <!-- Bar Chart -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Progression des utilisateurs</h6>
        </div>
        <div class="card-body">
            <div class="chart-bar">
                <div id='loader' class="loader_user"></div>
                <canvas id="myBarChart" class="cacher"></canvas>
            </div>
            <hr>
                 
        </div>
    </div>


    <a href="{{ path('project_show', {'id': project.id}) }}" class="btn btn-secondary btn-icon-split float-left">
        <span class="icon text-gray-600">
            <i class="fas fa-arrow-left"></i>
        </span>
        <span class="text">Retour au projet</span>
    </a>

</div>
{% endblock %}
    
{% block javascripts %}
<script src="{{ asset('js/demo/chart-area-demo.js')  }}"></script>
<script src="{{ asset('js/demo/chart-pie-demo.js')  }}"></script>
<script src="{{ asset('js/demo/chart-bar-demo.js')  }}"></script>
{% endblock %}