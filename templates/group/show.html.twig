{% extends 'base.html.twig' %}

{% block title %}Groupe n°{{ group.id }}{% endblock %}

{% block body %}
    <h1>Groupe n°{{ group.id }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Nom</th>
                <td>{{ group.nom }}</td>
                <td>
                    <ul>
                    {% for user in group.users %}
                        <li>{{ user.prenom }} {{ user.nom}}</li>
                    {% endif %}
                    </ul>
                </td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('group_index') }}">Retour</a>

    <a href="{{ path('group_edit', {'id': group.id}) }}">Mettre à jour</a>

    

    {{ include('group/_delete_form.html.twig') }}
{% endblock %}
