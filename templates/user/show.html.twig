{% extends 'base.html.twig' %}

{% block title %}Mes informations{% endblock %}

{% block body %}
    <h1>Mes informations</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Nom</th>
                <td>{{ user.nom }}</td>
            </tr>
            <tr>
                <th>Prénom</th>
                <td>{{ user.prenom }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>

        </tbody>
    </table>


    <a href="{{ path('home') }}" class="btn btn-secondary btn-icon-split">
        <span class="icon text-gray-600">
            <i class="fas fa-arrow-left"></i>
        </span>
        <span class="text">Retour</span>
    </a>
  

    <a href="{{ path('user_edit', {'id': user.id}) }}" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm float-right">Mettre à jour mes informations</a>
    

    <p class="mt-5">{{ include('user/_delete_form.html.twig') }}</p>
{% endblock %}
