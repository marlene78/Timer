{% block body %}
    <h1>Nouvelle Tâche</h1>

    {{ include('task/_form.html.twig') }}

    {% if task.projet is not empty %}
    <a href="{{ path('task_index' , {'id' : task.projet.id }) }}">Voir les tâches</a>
    {% endif %}
    
    <a href="{{ path('home') }}" class="btn btn-secondary btn-icon-split float-right">
        <span class="icon text-gray-600">
            <i class="fas fa-arrow-left"></i>
        </span>
        <span class="text">Retour</span>
    </a>
{% endblock %}
